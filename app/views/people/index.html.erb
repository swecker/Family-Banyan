<h1>Listing people</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Gender</th>
    <th>Mother</th>
    <th>Father</th>
    <th>Children</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @people.each do |person| %>
  <tr>
    <td><%= person.name %></td>
    <td><%= person.gender %></td>
    <td><%= person.mother.name if person.mother %></td>
    <td><%= person.father.name if person.father %></td>
    <td><%  person.children.each do |child| %>
            <%= child.name %><br />
        <%  end %></td>
    <td><%= link_to 'Show', person %></td>
    <td><%= link_to 'Edit', edit_person_path(person) %></td>
    <td><%= link_to 'Destroy', person, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

